<Window x:Class="FileStream.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileStream"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <TextBox x:Name="MainText"
            VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Visible"
                 AcceptsReturn="True" 
                 TextWrapping="Wrap"
                 Text="" 
                 FontSize="14" Margin="0,39,0,0" />
        <TextBox Name="Path_" HorizontalAlignment="Left" Margin="75,10,0,0" TextWrapping="Wrap" Text="path for text file" VerticalAlignment="Top" Width="120"/>
        <Button Click="Button_Click" Content="Open" HorizontalAlignment="Left" Margin="265,10,0,0" VerticalAlignment="Top"/>
        <Button Click="Button_Click_1" Content="Save" HorizontalAlignment="Left" Margin="355,10,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
